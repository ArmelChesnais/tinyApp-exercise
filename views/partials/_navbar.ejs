<!-- views/partial/navbar.ejs -->
<div class="header clearfix">
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a href="#" class="navbar-brand text-muted">tinyApp</a>
      </div>
      <ul class="nav navbar-nav">
        <li><a href="/">Home</a></li>
      </ul>
      <% if ( user ) { %>
        <form method="POST" action="/logout" class="nav navbar-form navbar-right">
          <div class="form-group">
            <label for="submit"><%= user.email %></label>
            <button id="submit" type="submit" class="btn btn-default">Logout</button>
          </div>
        </form>
      <% } else { %>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="/login">Sign In</a></li>
        <li><a href="/register">Register</a></li>
      </ul>
      <% } %>

    </div>
  </nav>
</div>